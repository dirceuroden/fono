<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">

	<application>
		<!-- Configura o locale (i18n) pt-BR para toda aplicacao. -->
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>

		<!-- Define o nome do arquivo com as labels e mensagens. 
		     Note que 'msg' eh a variavel usada nas telas pra recuperar as labels/mensagens. -->
		<resource-bundle>
			<base-name>messages_labels</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>

	<!-- Configura o PhaseListener utilizado para forcar a serializacao da sessao no App Engine.--> 
	<lifecycle>
		<phase-listener>br.com.fono.config.SessionSerializationPhaseListener</phase-listener>
	</lifecycle>

	<!-- Configura o valor do menu ativo -->
	<lifecycle>
		<phase-listener>br.com.fono.SetMenuAtivoPhaseListener</phase-listener>
	</lifecycle>
		
	
	
	<!-- Define a navegacao global para a pagina com a lista de mercadorias. -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>cliente</from-outcome>
			<to-view-id>/view/cliente.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<navigation-case>
			<from-outcome>paciente</from-outcome>
			<to-view-id>/view/paciente.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<navigation-case>
			<from-outcome>exame</from-outcome>
			<to-view-id>/view/exame.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<navigation-case>
			<from-outcome>relatorioExames</from-outcome>
			<to-view-id>/view/relatorioExames.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<navigation-case>
			<from-outcome>usuario</from-outcome>
			<to-view-id>/view/usuario.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<navigation-case>
			<from-outcome>sobre</from-outcome>
			<to-view-id>/view/sobre.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/logout.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<!-- Define uma lista para servir como Managed Bean para a pagina sobre. -->
	<managed-bean>
		<description>Sobre a aplicacao</description>
		<managed-bean-name>sobreMB</managed-bean-name>
		<managed-bean-class>java.util.ArrayList</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<list-entries>
			<value>sobre.title</value>
			<value>sobre.built</value>
			<value>sobre.site</value>
			<value>sobre.build</value>
		</list-entries>
	</managed-bean>
</faces-config>